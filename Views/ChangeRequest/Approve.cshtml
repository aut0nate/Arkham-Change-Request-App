@{
    ViewData["Title"] = "Approve Change Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var changeRequest = ViewBag.ChangeRequest as ArkhamChangeRequest.Models.ChangeRequest;
}

<div class="change-request-container">
    <div class="form-container">
        <h3 class="form-title">Approve Change Request #@changeRequest?.Id</h3>
        
        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }

        <!-- Change Request Summary -->
        <div class="request-summary">
            <h4>Change Request Details</h4>
            <div class="summary-grid">
                <div class="summary-item">
                    <label>Requestor:</label>
                    <span>@changeRequest?.RequestorName (@changeRequest?.RequestorEmail)</span>
                </div>
                <div class="summary-item">
                    <label>Title:</label>
                    <span>@changeRequest?.ChangeTitle</span>
                </div>
                <div class="summary-item">
                    <label>Type:</label>
                    <span>@changeRequest?.ChangeType</span>
                </div>
                <div class="summary-item">
                    <label>Priority:</label>
                    <span>@changeRequest?.Priority</span>
                </div>
                <div class="summary-item">
                    <label>Status:</label>
                    <span class="status-badge status-@changeRequest?.Status.ToString().ToLower()">@changeRequest?.Status</span>
                </div>
                <div class="summary-item">
                    <label>Created:</label>
                    <span>@changeRequest?.CreatedDate.ToString("dd/MM/yyyy HH:mm")</span>
                </div>
            </div>
            
            <div class="description-section">
                <label>Description:</label>
                <p>@changeRequest?.ChangeDescription</p>
            </div>
        </div>

        <!-- Approval Form -->
        <form asp-action="Approve" method="post" class="approval-form">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@changeRequest?.Id" />
            
            <div class="approval-section">
                <h4 class="section-title">Approval Information</h4>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="approverName" class="form-label required">Approver Name</label>
                        <input type="text" name="approverName" id="approverName" class="form-control" 
                               placeholder="Enter your full name" value="@ViewBag.ApproverName"
                               readonly="readonly" required />
                    </div>
                    
                    <div class="form-group">
                        <label for="approverEmail" class="form-label required">Approver Email</label>
                        <input type="email" name="approverEmail" id="approverEmail" class="form-control" 
                               placeholder="Enter your email address" value="@ViewBag.ApproverEmail"
                               readonly="readonly" required />
                    </div>
                </div>
                
                <div class="approval-info">
                    <p><strong>By approving this change request, you confirm that:</strong></p>
                    <ul>
                        <li>You have reviewed the change details and risk assessment</li>
                        <li>The change is authorized and necessary</li>
                        <li>You take responsibility for the approval decision</li>
                        <li>The change can proceed to implementation</li>
                    </ul>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="form-actions">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-check"></i> Approve Request
                </button>
                <a asp-action="Details" asp-route-id="@changeRequest?.Id" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Details
                </a>
                <button type="button" class="btn btn-danger" id="openRejectModal">
                    <i class="fas fa-times"></i> Reject Request
                </button>
            </div>
        </form>
    </div>
</div>

<div class="modal-overlay" id="rejectionModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-header">
            <h4>Reject Change Request</h4>
            <button type="button" class="modal-close" id="closeRejectModal" aria-label="Close rejection window">&times;</button>
        </div>
        <form asp-action="Reject" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@changeRequest?.Id" />
            <div class="form-group">
                <label for="rejectionReason" class="form-label required">Rejection Reason</label>
                <textarea id="rejectionReason" name="rejectionReason" class="form-control"
                          rows="4" placeholder="Explain why this change is being rejected..." required></textarea>
                <small class="helper-text">This note will be displayed to the requester.</small>
            </div>
            <div class="modal-actions">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-times-circle"></i> Submit Rejection
                </button>
                <button type="button" class="btn btn-secondary" id="cancelRejectModal">Cancel</button>
            </div>
        </form>
    </div>
</div>

<style>
.request-summary {
    background: var(--card-bg-color);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 20px;
    margin-bottom: 20px;
}

.summary-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 15px;
    margin-bottom: 15px;
}

.summary-item {
    display: flex;
    flex-direction: column;
    gap: 5px;
}

.summary-item label {
    font-weight: 600;
    color: var(--text-color);
    font-size: 0.9rem;
}

.summary-item span {
    color: var(--text-secondary);
    font-size: 0.95rem;
}

.description-section {
    border-top: 1px solid var(--border-color);
    padding-top: 15px;
}

.description-section label {
    font-weight: 600;
    color: var(--text-color);
    display: block;
    margin-bottom: 8px;
}

.description-section p {
    color: var(--text-secondary);
    line-height: 1.5;
    margin: 0;
}

.status-badge {
    display: inline-block;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.status-new {
    background-color: #e3f2fd;
    color: #1976d2;
}

.status-approved {
    background-color: #e8f5e8;
    color: #2e7d32;
}

.status-complete {
    background-color: #f3e5f5;
    color: #7b1fa2;
}

.status-cancelled {
    background-color: #ffebee;
    color: #c62828;
}

.approval-section {
    background: var(--card-bg-color);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 20px;
    margin-bottom: 20px;
}

.approval-info {
    background: #e3f2fd;
    border-left: 4px solid var(--primary-color);
    padding: 15px;
    margin-top: 20px;
    border-radius: 0 4px 4px 0;
}

.approval-info p {
    margin: 0 0 10px 0;
    font-weight: 600;
    color: var(--text-color);
}

.approval-info ul {
    margin: 0;
    padding-left: 20px;
}

.approval-info li {
    margin-bottom: 5px;
    color: var(--text-secondary);
}

.btn-success {
    background-color: #2e7d32;
    border-color: #2e7d32;
    color: white;
}

.btn-success:hover {
    background-color: #1b5e20;
    border-color: #1b5e20;
}

.btn-danger {
    background-color: #c62828;
    border-color: #c62828;
    color: white;
}

.btn-danger:hover {
    background-color: #ad2121;
    border-color: #ad2121;
}

.modal-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.6);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.2s ease;
    z-index: 2000;
}

.modal-overlay.show {
    opacity: 1;
    pointer-events: auto;
}

.modal-dialog {
    background: var(--primary-bg);
    border-radius: 12px;
    width: 100%;
    max-width: 520px;
    padding: 24px;
    border: 1px solid var(--border-color);
    box-shadow: 0 25px 60px rgba(0, 0, 0, 0.45);
}

.modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
}

.modal-header h4 {
    margin: 0;
    color: var(--text-color);
}

.modal-close {
    background: transparent;
    border: none;
    color: var(--text-color);
    font-size: 1.4rem;
    cursor: pointer;
    line-height: 1;
}

.modal-actions {
    display: flex;
    justify-content: flex-end;
    gap: 10px;
    margin-top: 20px;
}

.helper-text {
    color: var(--text-muted);
    font-size: 0.85rem;
}
</style>

<script>
    (function () {
        const overlay = document.getElementById('rejectionModal');
        const openBtn = document.getElementById('openRejectModal');
        const closeBtn = document.getElementById('closeRejectModal');
        const cancelBtn = document.getElementById('cancelRejectModal');
        const reasonField = document.getElementById('rejectionReason');

        function closeModal() {
            overlay?.classList.remove('show');
        }

        function openModal() {
            overlay?.classList.add('show');
            reasonField?.focus();
        }

        openBtn?.addEventListener('click', openModal);
        closeBtn?.addEventListener('click', closeModal);
        cancelBtn?.addEventListener('click', closeModal);
        overlay?.addEventListener('click', function (evt) {
            if (evt.target === overlay) {
                closeModal();
            }
        });
    })();
</script>
