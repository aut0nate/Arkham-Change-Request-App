@{
    ViewData["Title"] = "Update Status";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var changeRequest = ViewBag.ChangeRequest as ArkhamChangeRequest.Models.ChangeRequest;
    var availableStatuses = ViewBag.AvailableStatuses as List<ArkhamChangeRequest.Models.ChangeRequestStatus>;
    var modifiedByValue = ViewBag.ModifiedBy as string ?? string.Empty;
    var hasAvailableStatuses = availableStatuses != null && availableStatuses.Any();
    Func<ArkhamChangeRequest.Models.ChangeRequestStatus, string> formatStatus = status =>
        status switch
        {
            ArkhamChangeRequest.Models.ChangeRequestStatus.Cancelled => "Rejected",
            ArkhamChangeRequest.Models.ChangeRequestStatus.OnHold => "On-Hold",
            _ => status.ToString()
        };
    var currentStatusLabel = changeRequest != null ? formatStatus(changeRequest.Status) : string.Empty;
}

<div class="change-request-container">
    <div class="form-container">
        <h3 class="form-title">Update Status - Change Request #@changeRequest?.Id</h3>
        
        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }

        <!-- Change Request Summary -->
        <div class="request-summary">
            <h4>Change Request Details</h4>
            <div class="summary-grid">
                <div class="summary-item">
                    <label>Title:</label>
                    <span>@changeRequest?.ChangeTitle</span>
                </div>
                <div class="summary-item">
                    <label>Requestor:</label>
                    <span>@changeRequest?.RequestorName</span>
                </div>
                <div class="summary-item">
                    <label>Current Status:</label>
                    <span class="status-badge status-@changeRequest?.Status.ToString().ToLower()">@currentStatusLabel</span>
                </div>
                <div class="summary-item">
                    <label>Priority:</label>
                    <span>@changeRequest?.Priority</span>
                </div>
            </div>
        </div>

        <!-- Status Update Form -->
        @if (!hasAvailableStatuses)
        {
            <div class="status-section">
                <div class="alert alert-info">
                    No status changes are available for this request at the moment.
                </div>
            </div>
            <div class="form-actions">
                <a asp-action="Details" asp-route-id="@changeRequest?.Id" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Details
                </a>
            </div>
        }
        else
        {
            <form asp-action="UpdateStatus" method="post" class="status-form">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@changeRequest?.Id" />
                
                <div class="status-section">
                    <h4 class="section-title">Status Update</h4>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="newStatus" class="form-label required">Status</label>
                            <select name="newStatus" id="newStatus" class="form-control" required>
                                <option value="">Select status</option>
                                @foreach (var status in availableStatuses!)
                                {
                                    var statusLabel = formatStatus(status);
                                    <option value="@status">@statusLabel</option>
                                }
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label for="modifiedBy" class="form-label required">Modified By</label>
                            <input type="text" name="modifiedBy" id="modifiedBy" class="form-control" 
                                   value="@modifiedByValue" readonly="readonly" />
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="comments" class="form-label">Comments</label>
                        <textarea name="comments" id="comments" class="form-control" rows="4" 
                                  placeholder="Optional: Add comments about this status change..."></textarea>
                    </div>
                    
                    <div class="status-info">
                        <h5>Status Definitions:</h5>
                        <ul>
                            <li><strong>New:</strong> Change request has been submitted and awaiting approval</li>
                            <li><strong>Approved:</strong> Change has been approved and ready for implementation</li>
                            <li><strong>On-Hold:</strong> Implementation paused pending further information</li>
                            <li><strong>Complete:</strong> Change has been successfully implemented</li>
                            <li><strong>Abandoned:</strong> Change will not be implemented after approval</li>
                            <li><strong>Rejected:</strong> Change request has been formally declined</li>
                        </ul>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Update Status
                    </button>
                    <a asp-action="Details" asp-route-id="@changeRequest?.Id" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Details
                    </a>
                </div>
            </form>
        }
    </div>
</div>

<style>
.request-summary {
    background: var(--card-bg-color);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 20px;
    margin-bottom: 20px;
}

.summary-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 15px;
}

.summary-item {
    display: flex;
    flex-direction: column;
    gap: 5px;
}

.summary-item label {
    font-weight: 600;
    color: var(--text-color);
    font-size: 0.9rem;
}

.summary-item span {
    color: var(--text-secondary);
    font-size: 0.95rem;
}

.status-badge {
    display: inline-block;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    width: fit-content;
}

.status-new {
    background-color: #e3f2fd;
    color: #1976d2;
}

.status-approved {
    background-color: #e8f5e8;
    color: #2e7d32;
}

.status-complete {
    background-color: #f3e5f5;
    color: #7b1fa2;
}

.status-cancelled {
    background-color: #ffebee;
    color: #c62828;
}

.status-section {
    background: var(--card-bg-color);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 20px;
    margin-bottom: 20px;
}

.status-info {
    background: var(--primary-bg);
    border: 1px solid var(--border-color);
    border-radius: 10px;
    padding: 18px;
    margin-top: 24px;
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.18);
}

.status-info h5 {
    margin: 0 0 12px 0;
    color: var(--text-color);
    font-size: 0.95rem;
    letter-spacing: 0.4px;
    text-transform: uppercase;
}

.status-info ul {
    margin: 0;
    padding: 0;
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.status-info li {
    background: var(--tertiary-bg);
    border-radius: 6px;
    padding: 10px 14px;
    color: var(--text-secondary);
    border: 1px solid rgba(255, 255, 255, 0.05);
}

.status-info strong {
    color: var(--text-color);
}
</style>
